ICLOUD_USER=your@icloud.email
ICLOUD_PASSWORD=your_app_specific_password
APP_TIMEZONE=Asia/Shanghai
APP_LOG_FILE=app/app.log
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/personal_ai_assistant
# Google OAuth file paths (defaults to app/data)
GOOGLE_CREDENTIALS_PATH=app/data/credentials.json
GOOGLE_TOKEN_PATH=app/data/token.pickle
# Backwards-compat: some modules check CREDENTIALS_FILE
CREDENTIALS_FILE=app/data/credentials.json
# Processed emails tracking file
PROCESSED_EMAILS_FILE=app/data/processed_emails.json
# Logging
APP_LOG_LEVEL=INFO
# APScheduler persistent jobstore (optional). Example: sqlite:///jobs.sqlite
APSCHEDULER_JOBSTORE_URL=
# External API retry/backoff defaults
EXTERNAL_API_RETRIES=3
EXTERNAL_API_BACKOFF_SECS=2

# NOTE: keep secrets out of version control. Use a secure secrets manager for production.
